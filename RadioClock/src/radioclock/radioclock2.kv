<ColoredLabel@Label>:
    font_size: '24sp'
    size_x: '600sp'
    color: (.6, .6, .6, 1)
    canvas.before:
        Color:
            rgb: (.9, .9, .9)
        Rectangle:
            pos: self.x, self.y + sp(2)
            size: self.width - sp(4), self.height - sp(4)
            
<MyLabel@Label>:
    font_size: 24
#    size_hint_x: None
#    size_hint_y: None
            
Widget:
    GridLayout:
        cols: 3
        rows: 3
        cols_minimum: {0:100, 1:600, 2:100}
        col_force_default: True
        rows_minimum: {0:90, 1:300, 2:90}
        row_force_default: True
        MyLabel:
            text: "1,1"
        MyLabel:
            text: "1,2"
        MyLabel:
            text: "1,3"
        MyLabel:
            text: "2,1"
        MyLabel:
            text: "2,2"
        MyLabel:
            text: "2,3"
        MyLabel:
            text: "3,1"
        MyLabel:
            text: "3,2"
        MyLabel:
            text: "3,3"
            
